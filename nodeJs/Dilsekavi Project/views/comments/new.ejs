<% include ../partials/header %>
<div class="container">
<div class="row new-comment">
<h1 style="text-align:center;">Add a comment to <%= campground.name %> </h1>
<div style="width:30%; margin:25px auto;">
<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
   <div class="form-group">
<input class="form-control" type="text" placeholder= "Text" name="comment[text]">        
</div>
<div class="form-group">
<input type="submit" class="btn btn-lg btn-primary btn-default btn-block" value="Comment">
</div>
</form>
<a href="/campgrounds/<%= campground._id %>">Back</a>
</div>
</div>
</div>
